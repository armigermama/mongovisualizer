extends layout

block head
  title mongo data visualizer :: dataview

block content
  .row
    .col-md-4.right-border
      form.form
        .form-group
          label select a collection
          select#collection-select
            option 1
            option 2
        .form-group
          label select a chart
          select#chart-type
            option 1
            option 2
        .form-group
          label sort by
          select#sort-by
            option descending
            option ascending
        .form-group
          label group by
          select#group-by
            option 1
            option 2
        .form-group
          label aggregation function
          select#agg-function
            option sum
            option count
        .form-group
          label aggregation field
          select#agg-field
            option 1
            option 2

    .col-md-8
      #chart